{
    "name": "NeedADadJoke",
    "version": "1.0.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "/extension/index.html",
        "default_title": "Need A Dad Joke"
    },
    "description": "Generate a random joke to brighten up your day!",
    "icons": {
        "16": "/icons/icons8-grinning-face-with-sweat-16.png"
    },
    "author": "caleblopez96@gmail.com",
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["/extension/script.js"]
        }
    ]
}
